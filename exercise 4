def display_main_menu():
    print("Enter some numbers separated by commas (e.g. 5, 67, 32)")

def get_user_input():
    user_input = input()
    str_list = user_input.split(",")
    float_list = [float(item.strip()) for item in str_list]
    return float_list

5
def calc_average(float_list):
    return sum(float_list) / len(float_list)

def find_min_max(temp_list):
    return [min(temp_list), max(temp_list)]
